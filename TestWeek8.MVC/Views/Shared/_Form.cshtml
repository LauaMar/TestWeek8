@model DishViewModel

<input asp-for="Id" hidden />

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input required asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <input type="text" required asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Price" class="control-label"></label>
    <input required asp-for="Price" class="form-control" />
    <span asp-validation-for="Price" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="MenuId" class="control-label"></label>
    <input required asp-for="MenuId" class="form-control" />
    <span asp-validation-for="MenuId" class="text-danger"></span>
</div>
<div class="form-group">

</div>
<div class="form-group">
    <label asp-for="Type" class="control-label"></label>
    <select asp-for="Type" asp-items="@ViewBag.Typologies" class="form-control">
        <option value="">Please select a value...</option>
    </select>
</div>

