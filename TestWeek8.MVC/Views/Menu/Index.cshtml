@model IEnumerable<MenuViewModel>

<div class="row">
    <div class="col-3"></div>

    <div class="col-lg-6 col-md-6 col-sm-12">
        <h1> I nostri Menù</h1>
        <br />
        @if (User.IsInRole("Ristoratore"))
        {
        <a class="btn btn-primary" asp-controller="Menu" asp-action="Create" role="button">Aggiungi nuovo Menù</a>
        }
        <p />
        <table class="table table-hover table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th> - </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var menu in Model)
                {
    <tr>
        <td>@menu.Id</td>
        <td>@menu.Name</td>
        <td>
            <a type="button" value="Detail" asp-controller="Menu" asp-action="Details" asp-route-id="@menu.Id" class="btn btn-info"><i class="fas fa-eye"></i></a>
        </td>
    </tr>
            }
            </tbody>
            <tfoot>
                <tr>
                    <th>Total</th>
                    <th> @Model.Count() </th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
        <div class="col-3"></div>
    </div>
</div>
